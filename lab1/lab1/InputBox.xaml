<Window x:Class="lab1.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=NewName}"
        Title="Rename" Height="170" Width="300">
    <DockPanel Margin="0,0,-0.4,-0.2">
        <Grid Margin="0,0,0,-0.2" Width="294">
            <Label Content="        Enter new name" Width="150" Height="25" Margin="72,25,72,90.2"/>
            <TextBox x:Name="NewName" Width="150" Height="25" Margin="72,40,71.6,55.8"/>
            <Button x:Name="okButton" Click="OkButton_Click" IsDefault="True" Height="25" Margin="72,86,168.6,9.8" Content="OK"/>
            <Button x:Name="cancelButton" IsCancel="True" Width="55" Height="25" Content="Cancel" Margin="167,86,71.6,9.8" />
        </Grid>
    </DockPanel>
</Window>
