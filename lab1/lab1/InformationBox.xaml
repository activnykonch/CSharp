<Window x:Class="lab1.InformationBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        FocusManager.FocusedElement="{Binding ElementName=Surname}"
        WindowStartupLocation="CenterOwner"
        Title="InformationBox" Height="450" Width="800">
    <Grid>
        <Label Content="Surname" Margin="265,90,323.6,300"/>
        <TextBox x:Name="Surname" Margin="265,125,323.6,265"/>
        <Label Content="Name" Margin="265,160,323.6,230"/>
        <TextBox x:Name="Name" Margin="265,195,323.6,195"/>
        <Label Content="Age" Margin="265,230,323.6,160"/>
        <TextBox x:Name="Age" Margin="265,265,323.6,125"/>
        <Button x:Name="OkButton" Content="Ok" Click="OkButton_Click"  IsDefault="True" Margin="265,330,458.6,65"/>
        <Button x:Name="CancelButton" Content="Cancel" IsCancel="True" Margin="400,330,323.6,65"/>

    </Grid>
</Window>
